<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AR.Drone.Client.Controls" x:Class="AR.Drone.Client.Controls.DoneControl" 
             mc:Ignorable="d">

    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="10" Direction="-45" ShadowDepth="5" Opacity="0.8"/>
        </Grid.Effect>
        <Label Name="checkMark" FontFamily="Segoe UI Symbol" Foreground="#0000C800" Background="#00007800">&#xE001;</Label>
        <local:RefreshControl x:Name="refreshCtrl" Width="20" IsSpinning="True" Fill="#00A0A0A0" />
    </Grid>
</UserControl>
